rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: Users can only upload/read/delete their own profile pictures
    match /profile-pictures/{userId}/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow write (create, update, delete) only if:
      // 1. User is authenticated
      // 2. The userId in the path matches the authenticated user's ID
      // 3. File is an image
      // 4. File size is less than 5MB
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // Post images: allow club-scoped uploads by authenticated users, public read
    match /posts/{clubId}/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Landing page images: Allow read for everyone, write only for authenticated users
    match /landing_images/{fileName} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Legacy landing-page path (for backwards compatibility)
    match /landing-page/{fileName} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

